<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.NewUserFragment">

    <TextView
        android:id="@+id/E_newUser_header"
        android:layout_width="331dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_mono_bold"
        android:text="Create Account"
        android:textAlignment="textStart"
        android:textColor="@color/dark_purple"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/E_newUser_form"
        android:layout_width="533dp"
        android:layout_height="708dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/E_newUser_header"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".user.ProfileFragment">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/E_newUser_profileImg"
                android:layout_width="210dp"
                android:layout_height="210dp"
                android:src="@drawable/hippo"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp"
                app:layout_constraintBottom_toTopOf="@id/E_newUser_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/E_newUser_uploadImage"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/dark_purple"
                android:text="Upload Image"
                android:textColor="@color/light_purple"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/E_newUser_profileImg" />

            <TextView
                android:id="@+id/E_newUser_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="Name:"
                android:textColor="@color/dark_purple"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.255"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/E_newUser_uploadImage" />

            <EditText
                android:id="@+id/E_newUser_textName"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:ems="13"
                android:fontFamily="@font/roboto_mono_medium"
                android:hint="Moo Deng"
                android:inputType="text"
                android:textColor="@color/dark_purple"
                app:layout_constraintBottom_toTopOf="@+id/E_newUser_pronouns"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/E_newUser_name" />

            <TextView
                android:id="@+id/E_newUser_pronouns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="Pronouns:"
                android:textColor="@color/dark_purple"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.275"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/E_newUser_textName" />

            <EditText
                android:id="@+id/E_newUser_textPronouns"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:ems="13"
                android:fontFamily="@font/roboto_mono_medium"
                android:hint="she/they"
                android:inputType="text"
                android:textColor="@color/dark_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/E_newUser_pronouns" />

            <TextView
                android:id="@+id/E_newUser_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="Phone:"
                android:textColor="@color/dark_purple"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.255"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/E_newUser_textEmail" />

            <EditText
                android:id="@+id/E_newUser_textPhone"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:ems="13"
                android:fontFamily="@font/roboto_mono_medium"
                android:hint="123 456 7890"
                android:inputType="phone"
                android:textColor="@color/dark_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/E_newUser_phone" />

            <TextView
                android:id="@+id/E_newUser_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="Email:"
                android:textColor="@color/dark_purple"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.255"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/E_newUser_textPronouns" />

            <EditText
                android:id="@+id/E_newUser_textEmail"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:ems="13"
                android:fontFamily="@font/roboto_mono_medium"
                android:hint="moodeng@ualberta.ca"
                android:inputType="textEmailAddress"
                android:textColor="@color/dark_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/E_newUser_email" />

            <RadioGroup
                android:id="@+id/E_newUser_notify_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.381"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/E_newUser_textPhone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_mono_medium"
                    android:text="Allow Notifications?:"
                    android:textColor="@color/dark_purple"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/E_newUser_notifications_yes"
                    android:layout_width="216dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="8dp"
                    android:checked="true"
                    android:fontFamily="@font/roboto_mono_medium"
                    android:text="Allow"
                    android:textColor="@color/dark_purple"
                    app:layout_constraintEnd_toStartOf="@id/E_newUser_notifications_no"
                    app:layout_constraintStart_toStartOf="parent" />

                <RadioButton
                    android:id="@+id/E_newUser_notifications_no"
                    android:layout_width="216dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="8dp"
                    android:checked="true"
                    android:fontFamily="@font/roboto_mono_medium"
                    android:text="Don't Allow"
                    android:textColor="@color/dark_purple"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.356"
                    app:layout_constraintStart_toEndOf="@+id/E_newUser_notifications_yes" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/E_newUser_geo_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.381"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/E_newUser_notify_setting">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_mono_medium"
                    android:text="Allow Geolocation?:"
                    android:textColor="@color/dark_purple"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/E_newUser_geo_yes"
                    android:layout_width="216dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="8dp"
                    android:checked="true"
                    android:fontFamily="@font/roboto_mono_medium"
                    android:text="Allow"
                    android:textColor="@color/dark_purple"
                    app:layout_constraintEnd_toStartOf="@id/E_newUser_notifications_no"
                    app:layout_constraintStart_toStartOf="parent" />

                <RadioButton
                    android:id="@+id/E_newUser_geo_no"
                    android:layout_width="216dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="8dp"
                    android:checked="true"
                    android:fontFamily="@font/roboto_mono_medium"
                    android:text="Don't Allow"
                    android:textColor="@color/dark_purple"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.356"
                    app:layout_constraintStart_toEndOf="@+id/e_P_notifications_yes" />

            </RadioGroup>

            <Button
                android:id="@+id/E_newUser_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/dark_purple"
                android:text="Create"
                android:textColor="@color/light_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/E_newUser_geo_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="244dp"
                android:text="⭐ Entrant"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/E_newUser_profileImg" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>