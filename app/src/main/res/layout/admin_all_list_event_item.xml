<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="14dp"
    android:layout_marginBottom="14dp"
    android:layout_marginEnd="14dp"
    android:layout_marginStart="14dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/a_allList_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginEnd="25dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        android:src="@drawable/default_poster">
    </com.google.android.material.imageview.ShapeableImageView>

    <LinearLayout
        android:id="@+id/user_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/a_alllist_event_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Event name"
            android:textColor="@color/subtitle_text"
            android:textSize="24sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/a_alllist_event_occurence_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Every Monday"
            android:textColor="@color/mid_purple"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/a_alllist_event_location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="Roger Place"
            android:textColor="@color/mid_purple"
            android:textSize="16sp"></TextView>

        <TextView
            android:id="@+id/a_alllist_event_waitlist_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="waitlist Open"
            android:textColor="@color/mid_purple"
            android:textSize="20sp"></TextView>
    </LinearLayout>

</LinearLayout>