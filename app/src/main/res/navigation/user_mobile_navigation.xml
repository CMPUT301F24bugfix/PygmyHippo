<?xml version="1.0" encoding="utf-8"?>
<!--TODO: make names more descriptive-->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.pygmyhippo.organizer.MyEventsFragment"
        android:label="@string/title_myevents"
        tools:layout="@layout/user_fragment_myevents"
        android:background="@color/dark_purple">
        <action
            android:id="@+id/action_navigation_home_to_oViewEntrantsFragment"
            app:destination="@id/oViewEntrantsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.pygmyhippo.organizer.PostEvent"
        android:label="@string/title_post_event"
        tools:layout="@layout/user_fragment_qr"
        android:background="@color/dark_purple"/>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.pygmyhippo.organizer.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/user_fragment_profile"
        android:background="@color/dark_purple"/>

    <fragment
        android:id="@+id/oViewEntrantsFragment"
        android:name="com.example.pygmyhippo.organizer.oViewEntrantsFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/o_view_entrants"
        android:background="@color/dark_purple"/>
</navigation>